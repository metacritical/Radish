include ./header.jade
div.container
  div.row
    div.col-sm-6.col-md-4.col-md-offset-4
      h4.text-center
        p.heading-desc.text-center Sign in to Radish.
        div.account-wall
          form(class='form-signin', action='/login', method='POST')
            span.clearfix
            img.img-circle(class='profile-img', src='assets/radishlogo.png')
            input.form-control(name="username", type='text', placeholder='Username', autofocus='')
            input.form-control(name="password", type='password', placeholder='Password')
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
            label.input-group(style="margin-left:20px;")
              span.checkbox.text-left
                input(type='checkbox', name="remember", style="margin-top:0px")
              h5.form-label Remember me
            a.h5(href="/forgot") forgot?
            if message
              h5.text-center.text-danger #{message}
